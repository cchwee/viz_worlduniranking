{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/cchwee/viz_worlduniranking/main/universities_scores.csv"},
    "transform": [ 
      {
        "aggregate": [
          {
          "op": "count",
          "field": "title",
          "as": "count_uni"
          }
        ],
        "groupby": ["location"]
      },
      {
        "window": [{
            "op": "rank",
            "as": "rank"
          }],
          "sort":[{"field": "count_uni","order": "descending"}]
      }, {
        "filter": "datum.rank <= 5"
      }],
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 30, "stroke": "#fff"}
    },{
      "mark": {"type": "text", "radiusOffset": 10},
      "encoding": {
        "text": {"field": "count_uni", "type": "quantitative"}
      }
    }],
    "encoding": {
      "theta": {"field": "count_uni", "type": "quantitative", "stack": true},
      "radius": {"field": "count_uni", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
      "color": {"field": "location", "type": "nominal"}
    }
  }
  