{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 500,
    "height": 600,
    "padding": 50,
    "autosize": {"type": "none", "contains": "padding"},
  
    "signals": [
      {"name": "radius", "update": "width / 2"}
    ],
  
    "data": [
      {
        "name": "table",
        "values": [
          {"key": "teaching score", "value": 91.3, "category": "University of Oxford"},
          {"key": "research score", "value": 99.6, "category": "University of Oxford"},
          {"key": "citations score", "value": 98.0, "category": "University of Oxford"},
          {"key": "industry income score", "value": 68.7, "category": "University of Oxford"},
          {"key": "intl outlook score", "value": 96.4, "category":"University of Oxford"},
          {"key": "teaching score", "value": 92.2, "category": "Stanford University"},
          {"key": "research score", "value": 96.7, "category": "Stanford University"},
          {"key": "citations score", "value": 99.9, "category": "Stanford University"},
          {"key": "industry income score", "value": 90.1, "category": "Stanford University"},
          {"key": "intl outlook score", "value": 79.5, "category":"Stanford University"},
          {"key": "teaching score", "value": 94.4, "category": "Harvard University"},
          {"key": "research score", "value": 98.8, "category": "Harvard University"},
          {"key": "citations score", "value": 99.4, "category": "Harvard University"},
          {"key": "industry income score", "value": 46.8, "category": "Harvard University"},
          {"key": "intl outlook score", "value": 77.7, "category":"Harvard University"},
          {"key": "teaching score", "value": 92.5, "category": "California Institute of Technology"},
          {"key": "research score", "value": 96.9, "category": "California Institute of Technology"},
          {"key": "citations score", "value": 97.0, "category": "California Institute of Technology"},
          {"key": "industry income score", "value": 92.7, "category": "California Institute of Technology"},
          {"key": "intl outlook score", "value": 83.6, "category":"California Institute of Technology"},
          {"key": "teaching score", "value": 90.7, "category": "Massachusetts Institute of Technology"},
          {"key": "research score", "value": 94.4, "category": "Massachusetts Institute of Technology"},
          {"key": "citations score", "value": 99.7, "category": "Massachusetts Institute of Technology"},
          {"key": "industry income score", "value": 90.4, "category": "Massachusetts Institute of Technology"},
          {"key": "intl outlook score", "value": 90.0, "category":"Massachusetts Institute of Technology"}
          
        ]
      },
      {
        "name": "keys",
        "source": "table",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["key"]
          }
        ]
      }
    ],
    "params":[
      {
        "name": "University_Selector",
        "bind": {
          "input": "select",
          "options": [
            null,
            "University of Oxford",
            "Stanford University",
            "Harvard University",
            "California Institute of Technology",
            "Massachusetts Institute of Technology"
          ],
          "labels":[
            "Show All",
            "University of Oxford",
            "Stanford University",
            "Harvard University",
            "California Institute of Technology",
            "Massachusetts Institute of Technology"
          ],
          "name": "University Selection "
        }
      }
    ],
    "transform": [
      {"filter": "table.values.category == University_Selector"}
      ],
    "scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "padding": 0.5,
        "domain": {"data": "table", "field": "key"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "zero": true,
        "nice": false,
        "domain": {"data": "table", "field": "value"},
        "domainMin": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "table", "field": "category"},
        "range": {"scheme": "category10"}
      }
    ],
  
    "encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    },
  
    "marks": [
      {
        "type": "group",
        "name": "categories",
        "zindex": 1,
        "from": {
          "facet": {"data": "table", "name": "facet", "groupby": ["category"]}
        },
        "marks": [
          {
            "type": "line",
            "name": "category-line",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "interpolate": {"value": "linear-closed"},
                "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
                "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
                "stroke": {"scale": "color", "field": "category"},
                "strokeWidth": {"value": 1},
                "fill": {"scale": "color", "field": "category"},
                "fillOpacity": {"value": 0.1}
              }
            }
          },
          {
            "type": "text",
            "name": "value-text",
            "from": {"data": "category-line"},
            "encode": {
              "enter": {
                "x": {"signal": "datum.x"},
                "y": {"signal": "datum.y"},
                "text": {"signal": "datum.datum.value"},
                "align": {"value": "center"},
                "baseline": {"value": "middle"},
                "fill": {"value": "black"}
              }
            }
          }
        ]
      },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "keys"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "name": "key-label",
        "from": {"data": "keys"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius + 5) * cos(scale('angular', datum.key))"},
            "y": {"signal": "(radius + 5) * sin(scale('angular', datum.key))"},
            "text": {"field": "key"},
            "align": [
              {
                "test": "abs(scale('angular', datum.key)) > PI / 2",
                "value": "right"
              },
              {
                "value": "left"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.key) > 0", "value": "top"
              },
              {
                "test": "scale('angular', datum.key) == 0", "value": "middle"
              },
              {
                "value": "bottom"
              }
            ],
            "fill": {"value": "black"},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "line",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      }
    ]
  }
  